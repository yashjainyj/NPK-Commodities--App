<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar1"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:title="Items"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!--<com.facebook.shimmer.ShimmerFrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:id="@+id/shimmer"-->
        <!--android:layout_height="match_parent">-->
        <!--<include layout="@layout/shimmer_account_detail"></include>-->
    <!--</com.facebook.shimmer.ShimmerFrameLayout>-->

    <ScrollView

        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar1"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:id="@+id/back"
                android:tint="#70000000"
                android:scaleType="fitXY"
                android:src="@color/colorPrimary" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@color/colorPrimary"
                tools:layout_editor_absoluteY="168dp"
                tools:layout_editor_absoluteX="142dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorAccent"
                android:layout_marginTop="51dp"
                android:id="@+id/circleImageView"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=""
                android:layout_marginTop="5dp"
                android:id="@+id/name"
                android:layout_below="@id/circleImageView"
                android:textColor="#FFFFFF"/>



            <com.google.android.material.card.MaterialCardView
                android:background="@drawable/profile"
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:elevation="12dp"
                app:cardPreventCornerOverlap="true"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="30dp"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Information"
                        android:textSize="16dp"
                        android:textColor="#000"
                        android:id="@+id/userinfo"
                        android:layout_margin="12dp"/>
                    <TableRow
                        android:id="@+id/hr"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="50dp"
                        android:background="#444"></TableRow>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/placeholder"
                        android:layout_below="@+id/hr"
                        android:id="@+id/locationplace"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="15dp"
                        android:layout_below="@id/hr"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="70dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="26dp"
                        android:text=""
                        android:id="@+id/location"
                        android:textColor="#4B4949"
                        android:textSize="13dp"
                        android:layout_below="@id/locationplace"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mail"
                        android:layout_below="@+id/location"
                        android:id="@+id/emailplace"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="25dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="15dp"
                        android:layout_below="@id/location"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="70dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="30dp"
                        android:text=""
                        android:textColor="#3F51B5"
                        android:textSize="13dp"
                        android:id="@+id/email"
                        android:layout_below="@id/emailplace"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/phone"
                        android:layout_below="@+id/email"
                        android:id="@+id/phoneplace"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="25dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="15dp"
                        android:layout_below="@id/email"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="70dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="30dp"
                        android:text=""
                        android:id="@+id/phonenumber"
                        android:textColor="#3F51B5"
                        android:textSize="13dp"
                        android:layout_below="@id/phoneplace"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/card"
                        android:layout_below="@+id/phonenumber"
                        android:id="@+id/aboutplace"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="25dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rashan Card No."
                        android:textSize="15dp"
                        android:layout_below="@id/phonenumber"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="70dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="30dp"
                        android:text=""
                        android:textColor="#807D7D"
                        android:textSize="13dp"
                        android:id="@+id/about"
                        android:layout_below="@id/aboutplace"/>






                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/age"
                        android:layout_below="@+id/about"
                        android:id="@+id/ageI"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="25dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textSize="15dp"
                        android:layout_below="@id/about"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="70dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="30dp"
                        android:text=""
                        android:textColor="#807D7D"
                        android:textSize="13dp"
                        android:id="@+id/age"

                        android:layout_below="@id/ageI"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gender"
                        android:layout_below="@+id/age"
                        android:id="@+id/genderi"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="25dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="15dp"
                        android:layout_below="@id/age"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="70dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="30dp"
                        android:text=""
                        android:textColor="#807D7D"
                        android:textSize="13dp"
                        android:id="@+id/gender"
                        android:layout_below="@id/genderi"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/avatar"
                        android:layout_below="@+id/gender"
                        android:id="@+id/member"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="25dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member Details"
                        android:textSize="15dp"
                        android:layout_below="@id/gender"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="70dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="30dp"
                        android:text=""
                        android:textColor="#807D7D"
                        android:textSize="13dp"
                        android:id="@+id/memberde"
                        android:layout_marginBottom="30dp"
                        android:layout_below="@id/member"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/edit"
        android:id="@+id/edit"
        android:layout_marginRight="30dp"
        />
</RelativeLayout>